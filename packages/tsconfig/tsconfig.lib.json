{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Whiteboard Library TypeScript Config",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		// Library-specific settings
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		// Module settings for libraries
		"module": "ESNext",
		"moduleResolution": "node",
		"allowImportingTsExtensions": false,

		// Emit configuration for libraries
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./dist",
		"rootDir": "./src",

		// Enable composite for project references
		"composite": true,
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo",

		// Stricter settings for libraries
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true,
		"exactOptionalPropertyTypes": true,

		// Library bundling
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,

		// Type roots for libraries
		"typeRoots": ["./node_modules/@types"],
		"types": [],

		// Paths for internal imports
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		".turbo",
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.spec.tsx",
		"**/*.test.tsx",
		"**/__tests__/**",
		"**/__mocks__/**"
	]
}
